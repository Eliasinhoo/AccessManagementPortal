@model IEnumerable<License>

<h2>All Licenses</h2>


<table>
    <thead>
        <tr>
            <th>User</th>
            <th>Product</th>
            <th>Active?</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var license in Model)
        {
            <tr>
                <td>@license.ApplicationUser.Email</td>
                <td>@license.Product.Name</td>
                <td>
                    <span aria-labl="@(license.IsActive ? true : false)">
                        @(license.IsActive ? "✅" : "❌")
                    </span>
                </td>
                <td>
                    <form asp-controller="Licenses"
                          asp-action="Delete"
                          asp-route-id="@license.Id"
                          method="post"
                          onsubmit="return confirm('Delete this license?');">


                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
